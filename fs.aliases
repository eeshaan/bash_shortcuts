alias bashexec='chmod -R u=rwx,g=rX,o=rX *.sh' # give execute permission to .sh
alias ls_size='ls -l --block-size=M'
alias ls_size_g='ls -l --block-size=G'
alias findstr='~/shortcut/scripts/findstr.sh'
alias see='exa -T --git-ignore'
alias ll='(pwd; export COLUMNS=$( (( $COLUMNS <= 100 )) && echo "$COLUMNS" || echo "100" ); exa -G --across --group-directories-first -F)'
